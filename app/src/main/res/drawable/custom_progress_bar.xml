<?xml version="1.0" encoding="utf-8"?>
<rotate android:fromDegrees="-90"
    android:toDegrees="270"
    android:pivotX="50%"
    android:pivotY="50%"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <layer-list>
        <item android:id="@+id/progress_bar">
            <layer-list>
                <item>
                    <shape android:shape="ring"
                        android:useLevel="false">

                        <size android:width="50dp" android:height="50dp"/>

                        <gradient
                            android:useLevel="false"
                            android:type="sweep"
                            android:startColor="#0DFAF0CA"
                            android:endColor="?attr/colorPrimary"
                            android:centerColor="?attr/colorSecondary"
                            />
                    </shape>
                </item>
            </layer-list>
        </item>
        <item android:top="5.5dp" android:right="2.9dp" android:id="@+id/progress_icon"
            android:gravity="right|center_vertical">
            <shape android:shape="rectangle"
                android:useLevel="false"
                >
                <size android:height="5.5dp"
                    android:width="5.5dp" />
                <solid android:color="?attr/colorPrimary"/>

                <corners
                    android:bottomLeftRadius="18dp"
                    android:bottomRightRadius="18dp" />
                <!--                <gradient-->
                <!--                    android:useLevel="false"-->
                <!--                    android:type="linear"-->
                <!--                    android:startColor="#CCFF8F71"-->
                <!--                    android:angle="270"-->
                <!--                    android:endColor="#0DFAF0CA"/>-->
            </shape>
        </item>
    </layer-list>

</rotate>
